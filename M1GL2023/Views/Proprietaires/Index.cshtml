            });
        }

        //Add Data Function
        function Add() {
            var res = validate();
            if (res == false) {
                return false;
            }
            var proObj = {
                id: $('#id').val(),
                Nom: $('#nom').val(),
                Prenom: $('#prenom').val(),
                Email: $('#email').val(),
                Username: $('#username').val(),
                Password: $('#password').val()
            };
            $.ajax({
                url: "/Proprietaires/Add",
                data: JSON.stringify(proObj),
