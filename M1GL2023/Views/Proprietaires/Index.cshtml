                    $('#prenom').val(result.Prenom);
                    $('#email').val(result.Email);
                    $('#username').val(result.Username);
                    $('#password').val(result.Password);
                    $('#myModal').modal('show');
                    $('#btnUpdate').show();
                    $('#btnAdd').hide();
                },
