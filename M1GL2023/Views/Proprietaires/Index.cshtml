                }
            });
        }

        //function for deleting employee's record
        function Delete(ID) {
            var ans = confirm("Are you sure you want to delete this Record?");
            if (ans) {
                $.ajax({
                    url: "/Proprietaires/Delete/" + ID,
                    type: "POST",
                    contentType: "application/json;charset=UTF-8",
